export PS1="\w$ "
export EDITOR="vim"

function parse_git_branch {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || return
    echo "("${ref#refs/heads/}")"
}

# Put the git branch into the prompt
PS1="\h: \w \$(parse_git_branch)\\$ "

# http://www.catonmat.net/blog/bash-vi-editing-mode-cheat-sheet/
#set -o vi
set -o emacs

# Fix terminal setting to allow more color
if [ "$TERM" = "xterm" ]; then
  export TERM=xterm-256color
fi
if [ "$TERM" = "screen" ]; then
  export TERM=screen-256color
fi

# Fix the SSH authentication
my_ssh_auth_sock="$SSH_AUTH_SOCK"
if [ -n "$my_ssh_auth_sock" -a "$my_ssh_auth_sock" != "/tmp/ssh-agent-$USER-screen" ]; then
  rm -f "/tmp/ssh-agent-$USER-screen"
  ln -sf "$my_ssh_auth_sock" "/tmp/ssh-agent-$USER-screen"
fi
