export PS1="\w$ "
export EDITOR="vim"

function parse_git_branch {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || return
    echo "("${ref#refs/heads/}")"
}

# Put the git branch into the prompt
PS1="\h: \w \$(parse_git_branch)\\$ "

# http://www.catonmat.net/blog/bash-vi-editing-mode-cheat-sheet/
set -o vi
